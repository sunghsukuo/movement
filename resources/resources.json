{
  "pi": {
    "name": "WoT Pi",
    "description": "A simple WoT-connected Raspberry PI for the movement training.",
    "port": 8888,
    "sensors": {
      "ultrasonic": {
        "name": "Ultrasonic Sensor",
        "description": "A HC-SR04 ultrasonc sensor for distance measurement.",
        "unit": "cm",
        "value": 0,
        "echoGpio": 8,
        "triggerGpio": 11,
        "timeout": 750
      }
    },
    "actuators": {
      "rgbLED": {
        "r":{
          "name": "Red LED",
          "value": 0,
          "gpio": 4
        },
        "g":{
          "name": "Green LED",
          "value": 0,
          "gpio": 17
        },
        "b":{
          "name": "Blue LED",
          "value": 0,
          "gpio": 27
        }  
      }
    }
  }
}